NAME_AMS 	= 	asm
NAME 		= 	corewar

CC			= 	gcc
CFLAGS		= 	-Wall -Werror -Wextra
OCLINT		=	oclint

HEADER 		= 	libft.h get_next_line/get_next_line.h ft_printf/ft_printf.h

################################################################################
#	ASM
################################################################################


################################################################################
#	COREWAR
################################################################################


################################################################################
#	RULES
################################################################################
.SILENT : $(NAME) clean fclean

all: $(NAME)

$(NAME):
	$(CC) $(CFLAGS) -c $(HEADER) $(SRC)
	ar rc $(NAME) $(OBJ)
	ranlib $(NAME)

clean:
	rm -f $(OBJ) $(JUNCK)

fclean: clean
	rm -f $(NAME)

re: fclean all

list:
	ar t $(NAME)
